{
  "name": "hydrabot",
  "version": "1.0.0",
  "description": "Jarvis ðŸ¤– for your team's GitHub workflow",
  "author": "Soham Parekh <mail@sohamp.dev> (https://sohamp.dev)>",
  "license": "GPL-3.0-only",
  "repository": "https://github.com/AlQaholic007/hydrabot.git",
  "scripts": {
    "dev": "LOG_LEVEL=trace NODE_ENV=development HYDRABOT_SCHEDULER=true nodemon --exec 'npm start'",
    "start": "HYDRABOT_SCHEDULER=true probot run ./index.js",
    "test": "NODE_ENV=test jest && standard",
    "test:unit": "LOG_LEVEL=warn NODE_ENV=test jest __tests__/unit/* && standard",
    "test:e2e": "LOG_LEVEL=warn NODE_ENV=test jest __tests__/e2e/* && standard",
    "test-watch": "NODE_ENV=test jest --watch",
    "test-coverage": "NODE_ENV=test standard && jest --collectCoverage && codecov",
    "lint": "standard --fix"
  },
  "dependencies": {
    "colors": "^1.3.2",
    "expect": "^25.3.0",
    "glob": "^7.1.6",
    "jest-cli": "^23.6.0",
    "js-yaml": "^3.11.0",
    "lodash": "^4.17.15",
    "minimatch": "^3.0.4",
    "mockdate": "^2.0.5",
    "moment": "^2.24.0",
    "node-fetch": "^2.1.2",
    "parse-reminder": "^1.2.0",
    "path": "^0.12.7",
    "probot": "^9.6.6",
    "probot-commands": "^1.1.0",
    "probot-metadata": "^1.0.1",
    "probot-scheduler": "^2.0.0-beta.1",
    "probot-serverless-now": "^2.1.2",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "nock": "^11.7.2",
    "nodemon": "^1.18.3",
    "object-dot": "^1.7.0",
    "smee-client": "^1.0.1",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 7.7.0",
    "npm": ">= 4.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "setupFiles": [
      "./__fixtures__/setup/jestSetUp.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  }
}
